{
  "compilerOptions": {
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "target": "es2018",
    "lib": [ "es2018",  "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "test/**/*.ts"]
}
